    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            // "python.venvPath": "${workspaceRoot}/venv",
            // "envFile": "${workspaceFolder}/venv",
            // "python.pythonPath": "${workspaceRoot}/venv/bin/python",
            "pythonPath":"${workspaceFolder}/venv/bin/python",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--port=5500"
                // "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}